<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/front">


    <TextView
        android:text="Or, login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleLoginModeTextView"
        android:clickable="true"
        android:onClick="toggleLoginMode"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="211dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/activity_horizontal_margin" />

    <Button
        android:text="Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginSignupButton"
        android:layout_alignRight="@+id/loginSignupButton"
        android:layout_alignEnd="@+id/loginSignupButton"
        android:layout_marginTop="38dp"
        android:id="@+id/Exit"
        android:elevation="24dp"
        android:background="@android:color/black"
        android:textColor="@android:color/holo_red_light"
        android:textSize="@dimen/cast_intro_overlay_focus_radius" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/frntanim"
        android:layout_alignParentTop= "true"
        android:layout_centerHorizontal="true"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordEditText"
        android:hint="Enter Your Password"
        android:layout_marginBottom="64dp"
        android:background="@android:color/background_light"
        android:textColorHint="@android:color/holo_orange_dark"
        android:layout_above="@+id/toggleLoginModeTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/usernameEditText"
        android:hint="Enter Your Username ........."
        android:background="@android:color/background_light"
        android:textColorHint="@android:color/holo_orange_dark"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/passwordEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="signupLogin"
        android:id="@+id/loginSignupButton"
        android:background="@android:color/background_light"
        android:textColor="@android:color/holo_orange_dark"
        android:elevation="24dp"
        android:layout_alignBaseline="@+id/toggleLoginModeTextView"
        android:layout_alignBottom="@+id/toggleLoginModeTextView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
